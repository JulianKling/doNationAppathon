<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButtonStyle" parent="android:style/Widget.Button">
        <item name="android:background">#454545</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">52sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MyTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#454545</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_margin">1mm</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <integer name="net.gini.android.vision.show_processing_average">0</integer>

</resources>
